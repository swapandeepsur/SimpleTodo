<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_edit_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg2"
        android:orientation="vertical">

    <TextView
        android:text="Edit Item Below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditItem"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="19dp"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/etEditItem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:id="@+id/etEditItem"
        android:soundEffectsEnabled="false"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:imeOptions="actionDone"
        android:textStyle="normal|bold"
        tools:textAlignment="textEnd" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onSaveItem"

        android:layout_marginEnd="23dp"
        android:layout_alignBottom="@+id/etEditItem"
        android:layout_alignParentEnd="true" />


</LinearLayout>
